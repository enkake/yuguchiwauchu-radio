{{- $pctx := . -}}
{{- if .IsHome -}}{{ $pctx = .Site }}{{- end -}}
{{- $pages := slice -}}
{{- if or $.IsHome $.IsSection -}}
{{- $pages = $pctx.RegularPages -}}
{{- else -}}
{{- $pages = $pctx.Pages -}}
{{- end -}}
{{- $limit := .Site.Config.Services.RSS.Limit -}}
{{- if ge $limit 1 -}}
{{- $pages = $pages | first $limit -}}
{{- end -}}
{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd" xmlns:content="http://purl.org/rss/1.0/modules/content/" xmlns:dc="http://purl.org/dc/elements/1.1/">
  <channel>
    <title>{{ .Site.Title }}</title>
    <link>{{ .Permalink }}</link>
    <description>{{ printf "<![CDATA[%s]]>" .Site.Params.description | safeHTML }}</description>
    <generator>Hugo -- gohugo.io</generator>
    <language>{{ .Site.LanguageCode }}</language>
    <copyright>{{ .Site.Params.copyright }}</copyright>
    {{- with .Site.Params.email }}<managingEditor>{{ . }}</managingEditor>{{ end }}
    {{- with .Site.Params.email }}<webMaster>{{ . }}</webMaster>{{ end }}
    {{- if not .Date.IsZero }}
    <lastBuildDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</lastBuildDate>
    {{- end }}
    {{ with .OutputFormats.Get "RSS" -}}
    {{ printf "<atom:link href=%q rel=\"self\" type=%q />" .Permalink .MediaType | safeHTML }}
    {{ end -}}
    
    {{/* iTunes specific tags */}}
    <itunes:author>{{ .Site.Params.itunes.author }}</itunes:author>
    <itunes:summary>{{ printf "<![CDATA[%s]]>" .Site.Params.description | safeHTML }}</itunes:summary>
    <itunes:owner>
      <itunes:name>{{ .Site.Params.itunes.owner.name }}</itunes:name>
      <itunes:email>{{ .Site.Params.itunes.owner.email }}</itunes:email>
    </itunes:owner>
    <itunes:explicit>{{ .Site.Params.itunes.explicit }}</itunes:explicit>
    <itunes:image href="{{ .Site.BaseURL }}{{ .Site.Params.itunes.image | strings.TrimPrefix "/" }}" />
    <itunes:category text="{{ .Site.Params.itunes.category }}">
      {{- with .Site.Params.itunes.subcategory }}
      <itunes:category text="{{ . }}" />
      {{- end }}
    </itunes:category>
    <itunes:type>{{ .Site.Params.itunes.type }}</itunes:type>
    {{- with .Site.Params.ttl }}
    <ttl>{{ . }}</ttl>
    {{- end }}
    
    {{- $episodeCounter := 0 -}}
    {{- range $pages }}
    {{- $episodeCounter = add $episodeCounter 1 -}}
    <item>
      <title>{{ .Title }}</title>
      <link>{{ .Permalink }}</link>
      <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</pubDate>
      {{ with .Site.Params.author }}<author>{{ . }}</author>{{ end }}
      <guid isPermaLink="true">{{ .Permalink }}</guid>
      <description>{{ printf "<![CDATA[%s]]>" .Summary | safeHTML }}</description>
      <content:encoded>{{ printf "<![CDATA[%s]]>" .Content | safeHTML }}</content:encoded>
      
      {{/* Contributors */}}
      {{- range .Params.contributors }}
      <atom:contributor>
        <atom:name>{{ .name }}</atom:name>
        {{- with .uri }}
        <atom:uri>{{ . }}</atom:uri>
        {{- end }}
      </atom:contributor>
      {{- end }}
      
      {{/* DC Creator */}}
      {{- if .Params.author }}
      <dc:creator>{{ .Params.author }}</dc:creator>
      {{- else }}
      <dc:creator>{{ .Site.Params.author }}</dc:creator>
      {{- end }}
      
      {{/* Episode audio enclosure */}}
      {{- $page := . -}}
      {{- with .Params.audio }}
      <enclosure url="{{ . }}" length="{{ $page.Params.audio_length | default "0" }}" type="{{ $page.Params.audio_type | default "audio/mpeg" }}" />
      {{- end }}
      
      {{/* iTunes episode tags */}}
      <itunes:author>{{ .Params.author | default .Site.Params.itunes.author }}</itunes:author>
      {{- with .Params.subtitle }}
      <itunes:subtitle>{{ . }}</itunes:subtitle>
      {{- end }}
      <itunes:summary>{{ printf "<![CDATA[%s]]>" .Summary | safeHTML }}</itunes:summary>
      {{- with .Params.keywords }}
      <itunes:keywords>{{ . }}</itunes:keywords>
      {{- end }}
      {{- with .Params.thumbnail }}
      <itunes:image href="{{ $.Site.BaseURL }}{{ . | strings.TrimPrefix "/" }}" />
      {{- else }}
      <itunes:image href="{{ $.Site.BaseURL }}{{ $.Site.Params.defaultThumbnail | strings.TrimPrefix "/" }}" />
      {{- end }}
      <itunes:duration>{{ .Params.audio_duration | default "00:00:00" }}</itunes:duration>
      <itunes:episode>{{ $episodeCounter }}</itunes:episode>
      {{- with .Params.season }}
      <itunes:season>{{ . }}</itunes:season>
      {{- end }}
      <itunes:episodeType>{{ .Params.episode_type | default "full" }}</itunes:episodeType>
      {{- with .Params.transcript }}
      <itunes:transcript>
        <itunes:url>{{ . }}</itunes:url>
        <itunes:type>text/html</itunes:type>
        <itunes:language>{{ $.Site.LanguageCode }}</itunes:language>
      </itunes:transcript>
      {{- end }}
    </item>
    {{- end }}
  </channel>
</rss>